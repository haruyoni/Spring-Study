<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springbasic.mappers.memberMapper">
	<select id="curDate" resultType="String">
		select now()
	</select>
	
	<select id="viewMemberByUserId" resultType="com.springbasic.vo.Member">
		select * from member where userId = #{userId}
	</select>
	
	<insert id="inputMemberWithoutImg">
      insert into member(userId, userPwd, userEmail) values (#{userId}, sha1(md5(#{userPwd})), #{userEmail});
   </insert>
   
   <select id="getAllMembers" resultType="com.springbasic.vo.Member">
   		select * from member
   </select>
</mapper>