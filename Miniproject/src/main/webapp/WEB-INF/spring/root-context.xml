	<!-- 데이터베이스 Connection -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="url"
			value="jdbc:mysql://localhost:3306/hay?useSSL=false&amp;serverTimezone=Asia/Seoul&amp;characterEncoding=UTF-8">
		</property>
		<property name="driverClassName"
			value="com.mysql.cj.jdbc.Driver">
		</property>
		<property name="username" value="root"></property>
		<property name="password" value="1234"></property>
	</bean>

	<!-- 데이터소스 트랜잭션 매니저 객체 설정 -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	
	<!-- transaction을 annotation 방식으로 처리함 -->
	<tx:annotation-driven />

	<!-- sqlSessionFactory 설정 -->
	<bean id="sqlSessionFactory"
		class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource"></property>

		<!-- mybatis 환경설정 파일이 위치해 있는 곳 -->
		<property name="configLocation"
			value="classpath:/mybatis-config.xml">
		</property>

		<!-- mapper파일이 위치해 있는 곳 -->
		<property name="mapperLocations"
			value="classpath:/mappers/**/*Mapper.xml">
		</property>
	</bean>

	<!-- sqlSessionTemplate 객체 설정 -->
	<bean id="sqlSession"
		class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactory"></constructor-arg>
	</bean>

	<!-- AOP 설정을 위한 proxy 객체 설정 -->
	<aop:aspectj-autoproxy></aop:aspectj-autoproxy>

	<!-- 아래의 패키지를 조사(scan)하여 패키지 안의 객체를 관리 -->
	<context:component-scan
		base-package="com.miniproj.persistence" />
	<context:component-scan
		base-package="com.miniproj.service" />
   <context:component-scan base-package = "com.miniproj.aop" />

</beans>
